<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginRight="25dp"
app:cardCornerRadius="30dp"
    android:layout_centerInParent="true"
    android:layout_height="450dp"
    >
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/cerrarVentana2"
        android:layout_width="30dp"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"

        android:layout_height="30dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:id="@+id/arriba"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/texto"
        android:layout_height="wrap_content"
        android:fontFamily="@font/passion_one_black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="iFormulas - Todo en uno"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_mood_black_24dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
android:id="@+id/kota2"
    android:layout_marginTop="10dp"
       android:layout_height="wrap_content">
       <TextView
           android:textSize="16dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="150dp"
           android:fontFamily="@font/quicksand_bold"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:textColor="@android:color/black"
           android:textAlignment="center"

        android:text="@string/descripcion_app"


           />

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

android:layout_gravity="bottom|center_horizontal"
        android:layout_height="wrap_content">
<!--

        <Button
            android:id="@+id/botonCali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textStyle="bold"
            android:layout_margin="20dp"
android:backgroundTint="@color/colorGreen1"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_redondo"
            android:text="Califica la APP"
            android:textColor="@android:color/white" />
-->
        <Button
            android:id="@+id/botonface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
             android:textStyle="bold"
            android:layout_margin="20dp"

            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_redondo"
            android:text="Facebook iFormulas"
            android:textColor="@android:color/white" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>