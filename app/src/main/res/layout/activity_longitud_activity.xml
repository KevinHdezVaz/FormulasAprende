<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridView_segundoFragment.Longitud_activity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/my_toolbar"
        app:title="@string/lon_titu"
        app:titleTextColor="@android:color/white"
        android:layout_height="?actionBarSize">

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/numeros"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:background="#d60a733d">


        <LinearLayout
            android:id="@+id/lesvi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="7">

            <Button

                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick1"
                android:text="1"

                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"

                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick2"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"

                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick3"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick4"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick5"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="borrar"
                android:text="C"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="borrarTodo"
                android:text="AC"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/abajo"
            android:layout_below="@+id/lesvi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:orientation="horizontal"
            android:weightSum="7">

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick6"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick7"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick8"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick9"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick0"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/punto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="punto"
                android:text="."
                android:textSize="30dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textSize="20dp" />
        </LinearLayout>



    </RelativeLayout>

    <View
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/arriba"
        android:layout_alignParentStart="true"

        android:alpha=".5"

        android:background="@android:color/holo_blue_dark">


    </View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@id/my_toolbar"
    android:weightSum="5"
    android:id="@+id/arriba"
    android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_weight="2.6"
            android:pointerIcon="top_left_diagonal_double_arrow"
                android:layout_height="match_parent"
                />


    <EditText
        android:id="@+id/numero"
        android:hint="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:layout_weight="2.4"
        android:focusable="false"
        android:ems="10"

        android:gravity="left"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:textColor="@color/colorPrimary"

        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="25dp" />

</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/linea"
        android:layout_marginBottom="120dp"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/numeros"
        android:layout_below="@+id/linea"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="3dp">


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"

            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_km"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:maxLength="23"

                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"

                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_km"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l1"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_m"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:maxLength="23"

                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/metro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_me"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l2"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="23"

                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/cm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_cen"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l4"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_Decim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="23"

                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_deci"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l5"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_milla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="23"

                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_milla"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l3"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_milimetro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="23"

                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_milim"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l6"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_yarda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="23"

                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_yarda"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l7"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_pulgada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="23"

                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_pulga"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l8"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_pie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:maxLength="23"

                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/lon_pie"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>