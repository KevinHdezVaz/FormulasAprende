<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridView_segundoFragment.Volumen_activity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/my_toolbar"
        app:title="@string/vol_titu"
        app:titleTextColor="@android:color/white"
        android:layout_height="?actionBarSize">

    </androidx.appcompat.widget.Toolbar>


    <View
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/arriba"
        android:layout_alignParentStart="true"

        android:alpha=".5"

        android:background="@android:color/holo_blue_dark">

    </View>

    <include layout="@layout/numeros">

    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/my_toolbar"
        android:weightSum="5"
        android:id="@+id/arriba"
        android:layout_height="wrap_content">


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_weight="2.6"
            android:pointerIcon="top_left_diagonal_double_arrow"
            android:layout_height="match_parent"
            />


        <EditText
            android:id="@+id/numero"
            android:hint="0"
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_weight="2.4"
            android:ems="10"

            android:gravity="left"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="@color/colorPrimary"

            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="25dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/linea"
        android:layout_marginBottom="120dp"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/numeros"
        android:layout_below="@+id/linea"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="3dp">


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"

            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"

                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/vol_litro"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l1"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_ml"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/metro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/vol_milimetro"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l2"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_gal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/cm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/vol_galon"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l4"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_pi3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/vol_pie3"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l5"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_pul3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/vol_pulgada3"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l3"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_m3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/vol_metro3"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l6"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_cuartogal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"

                android:text="@string/vol_cuartogalo"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l7"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/texto_pinta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/vol_pinta"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
