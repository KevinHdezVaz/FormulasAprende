<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridView_segundoFragment.Energia">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/my_toolbar"
        app:title="@string/ene_titu"
        app:titleTextColor="@android:color/white"
        android:layout_height="?actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <include layout="@layout/numeros">

    </include>
    <View
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/arriba"
        android:layout_alignParentStart="true"

        android:alpha=".5"

        android:background="@android:color/holo_blue_dark">


    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/my_toolbar"
        android:weightSum="5"
        android:id="@+id/arriba"
        android:layout_height="wrap_content">


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_weight="2.6"
            android:pointerIcon="top_left_diagonal_double_arrow"
            android:layout_height="match_parent"
            />


        <EditText
            android:id="@+id/numero"
            android:hint="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_weight="2.4"
            android:ems="10"
            android:focusable="false"

            android:gravity="left"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="@color/colorPrimary"

            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="25dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/linea"
        android:layout_marginBottom="120dp"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/conjuntoEnergia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/numeros"
        android:layout_below="@+id/linea"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="3dp">


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"

            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/julio"
                android:maxLength="23"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="11"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"

                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/ene_juli"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l1"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/kilojoule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="11"
                android:maxLength="23"

                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"

                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/kilojoule2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/ene_kiloju"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l2"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/kilocaloria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="11"
                android:maxLength="23"

                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"

                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:id="@+id/cm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/ene_kiloca"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l4"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/kilovatio_hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="11"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:maxLength="23"

                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/ene_kilovatio"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l5"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/btu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="11"
                android:enabled="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:maxLength="23"

                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/ene_btu"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l3"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.aldoapps.autoformatedittext.AutoFormatEditText
                android:id="@+id/vatio_hora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/l1"
                android:layout_weight="4"
                android:ems="11"
                android:enabled="false"
                android:focusable="false"
                android:maxLength="23"

                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:isDecimal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="none"
                android:text="@string/ene_vatioHora"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>



    </RelativeLayout>
    </ScrollView>

</RelativeLayout>