<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
      android:background="@drawable/gradiente2"
     android:layout_width="match_parent"

    android:weightSum="10"
    android:layout_height="match_parent"
 >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorSlide_1"
        android:id="@+id/my_toolbar"
        app:titleTextColor="@android:color/white"
        android:layout_height="?actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:layout_weight="8"
        android:layout_marginTop="20dp"
        android:id="@+id/mainGrid"
        android:layout_below="@id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"

        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp">

    <!--Row1-->
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        app:cardElevation="8dp"
        android:id="@+id/card1"

    android:onClick="suma"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="8dp"
        android:layout_width="0dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"

            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">


            <ImageButton
                android:src="@drawable/suma"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:onClick="suma"

                android:layout_below="@+id/xd"
                android:id="@+id/add"

                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                 android:text="@string/suma"
                android:textSize="17dp"
                android:textColor="@android:color/black"

                android:fontFamily="@font/quicksand_bold"
                android:id="@+id/xd"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--Row2-->
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        app:cardElevation="8dp"
        android:onClick="resta"

        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_rowWeight="1"
        android:id="@+id/card2"
        app:cardCornerRadius="8dp"
        android:layout_width="0dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"

            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">


            <ImageButton
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:clickable="true"
                android:id="@+id/sub"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:onClick="resta"
                android:layout_below="@+id/xd2"
                android:background="@android:color/transparent"
                android:src="@drawable/resta"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="@android:color/black"
                android:text="@string/resta"
                android:textSize="17dp"
                android:id="@+id/xd2"
                android:fontFamily="@font/quicksand_bold"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--Row3-->
    <androidx.cardview.widget.CardView
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        app:cardElevation="8dp"
        android:id="@+id/card3"
        android:onClick="multi"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="8dp"
        android:layout_width="0dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"

            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">


            <ImageButton
                android:src="@drawable/multiplicac"
                android:clickable="true"
                android:layout_margin="5dp"
                android:onClick="multi"
                android:id="@+id/mul"
                android:adjustViewBounds="true"
                android:layout_below="@id/xd3"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="@android:color/black"
                android:text="@string/mul"
                android:textSize="12dp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:id="@+id/xd3"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


        <!--Row3-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:onClick="splash"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            android:id="@+id/card4"
            android:layout_width="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                    android:src="@drawable/matematicas"
                    android:onClick="splash"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    android:id="@+id/pregunta"
                     android:adjustViewBounds="true"
                    android:layout_below="@id/xd4"
                    android:scaleType="centerInside"                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@android:color/black"
                    android:text="Operaciones"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/xd4"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <!--Row3-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:onClick="adivina"
            android:id="@+id/card5"

            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                    android:src="@drawable/seguridad"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    android:onClick="adivina"
                    android:id="@+id/adivinaNumero"
                    android:adjustViewBounds="true"
                    android:layout_below="@id/xd5"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@android:color/black"
                    android:text="Adivina el Número"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/xd5"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!--Row3-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:id="@+id/card6"
        android:onClick="quick"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                    android:src="@drawable/aplicacion"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    android:id="@+id/ultimoGame"
                    android:onClick="quick"
                    android:adjustViewBounds="true"
                    android:layout_below="@id/xd6"
                    android:scaleType="centerInside"                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@android:color/black"
                    android:text="Correcto o Incorrecto"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/xd6"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!--Row3-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:onClick="tiempo"
            android:layout_marginBottom="16dp"
            android:id="@+id/card7"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"

            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:foreground="?attr/selectableItemBackground"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                    android:src="@drawable/seguridad"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    android:text="Tiempo"
                    android:id="@+id/tiempo"
                    android:adjustViewBounds="true"
                    android:layout_below="@id/xd7"
                    android:onClick="tiempo"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@android:color/black"
                    android:text="TIEMPO"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/xd7"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>




            <ImageButton
                android:layout_columnWeight="1"

                android:layout_rowWeight="1"
                android:layout_width="0dp"

                android:id="@+id/muteButton"
               android:background="@android:color/transparent"
                 android:layout_height="0dp"

                app:srcCompat="@drawable/ic_volume_up_black_24dp"
android:onClick="muteTemp"
                />


     </GridLayout>

</RelativeLayout>
