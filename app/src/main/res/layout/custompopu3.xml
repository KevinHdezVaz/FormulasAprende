<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
         android:layout_marginRight="25dp"
        app:cardCornerRadius="30dp"
        android:layout_centerInParent="true"
        android:layout_height="550dp"
        >
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/cerrarVentana"
            android:layout_width="30dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:elevation="5dp"

            android:layout_height="30dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/arriba"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/texto"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@android:color/black"

                android:textSize="15dp"
                android:text="@string/stickerfly"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="120dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/stickerfly"
                android:layout_height="120dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/kota2"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"    android:fontFamily="@font/quicksand_bold"
                android:layout_marginTop="220dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"

                android:text="@string/kota"

                />

        </LinearLayout>


        <Button

            android:id="@+id/botonvamo"
            android:layout_width="match_parent"
android:layout_marginBottom="40dp"
android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
             android:elevation="10dp"
            android:backgroundTint="@color/colorGreen1"

            android:textStyle="bold"
android:background="@drawable/btn_redondo"
            android:text="PROXIMAMENTE"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>